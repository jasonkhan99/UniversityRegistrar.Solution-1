@{
  Layout = "_Layout";
}

@using System.Collections.Generic;
@using Registrar.Models;

@model List<Registrar.Models.Department>

@if (@Model.Count == 0)
{
  <h3>No Departments exist yet!</h3>
} 

<ul>
  @foreach (Department department in Model)
  {
      <li>@Html.ActionLink(department.DepartmentName, "Details", new {id = department.DepartmentId})</li>
  }   
</ul>

<p>@Html.ActionLink("Add a department", "Create", "Department")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>